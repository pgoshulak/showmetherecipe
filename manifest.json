{
  "manifest_version": 2,
  "name": "Show Me The Recipe!",
  "description": "Skip the life story on recipe blogs and get what you came for - the recipe!",
  "version": "0.1.0",
  "author": "Peter Goshulak",
  // "default_locale": "en",

  /* "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }, */
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Show Me The Recipe!",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end",
      "js": [
        "js/data.js",
        "js/content-hide-by-site.js",
        "js/content-hide-by-selector.js"
      ]
    }
  ]
}
